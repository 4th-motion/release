{
  "name": "@4th-motion/release",
  "description": "Bump a new version and update your changelogs with a single command.",
  "version": "0.0.1",
  "author": "Marco Koenen <mako@4thmotion.com>",
  "license": "MIT",
  "repository": {
    "url": "git://github.com/4th-motion/release.git",
    "type": "git"
  },
  "keywords": [
    "release",
    "changelog",
    "github",
    "cli",
    "tags"
  ],
  "bin": {
    "release": "./bin/release.js"
  },
  "scripts": {
    "fresh": "rm -rf node_modules; yarn install",
    "lint:js": "4th-eslint ./**/*.js --color --fix --quiet",
    "lint:js:staged": "git diff --diff-filter=ACMRT --cached --name-only --quiet './**/*.js' | xargs 4th-eslint",
    "postinstall": "4th-git-hooks"
  },
  "devDependencies": {
    "@4th-motion/eslint-config": "^1.0.4",
    "@4th-motion/git-hooks": "^1.0.2"
  },
  "eslintConfig": {
    "extends": [
      "@4th-motion/eslint-config"
    ]
  },
  "git": {
    "pre-commit": "lint:js:staged"
  },
  "engines": {
    "node": ">= 6"
  },
  "dependencies": {
    "args": "^5.0.1",
    "chalk": "^4.1.0"
  }
}